@model FalkenbergsRevyn.Models.Response

@{
    ViewData["Title"] = "Create Response";
}

<h2>Create Response</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ResponseContent" class="control-label"></label>
        <input asp-for="ResponseContent" class="form-control" />
        <span asp-validation-for="ResponseContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateResponded" class="control-label"></label>
        <input asp-for="DateResponded" type="datetime-local" class="form-control"
               value="@(Model.DateResponded.ToString("yyyy-MM-ddTHH:mm"))" />
        <span asp-validation-for="DateResponded" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CommentId" class="control-label"></label>
        <input asp-for="CommentId" class="form-control" />
        <span asp-validation-for="CommentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

