@model FalkenbergsRevyn.Models.Response

@{
    ViewData["Title"] = "Delete Response";
}

<h2>Delete Response</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Response</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.ResponseContent</dd>

        <dt class="col-sm-2">Date Responded</dt>
        <dd class="col-sm-10">@Model.DateResponded</dd>

        <dt class="col-sm-2">Comment ID</dt>
        <dd class="col-sm-10">@Model.CommentId</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ResponseId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Cancel</a>
</form>
