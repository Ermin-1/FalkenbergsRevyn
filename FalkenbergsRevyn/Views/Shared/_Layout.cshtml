<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FalkenbergsRevyn</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FalkenbergsRevyn.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Favicon (Optional) -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- SEO Tags (Optional) -->
    <meta name="description" content="FalkenbergsRevyn - Skapa och hantera kommentarer och inlägg">
    <meta name="keywords" content="FalkenbergsRevyn, kommentarer, inlägg, respons">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="FalkenbergsRevyn" style="height:100%; border-radius: 15px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Visa endast "Home" för inloggade användare som inte är admin -->
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                           
                        }

                        <!-- Visa alla menyalternativ om användaren är admin -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration:underline solid 1px; text-underline-offset:2.5px; font-size:22.5px; align-content:center; text-align:center;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Response" asp-action="Index" style="text-decoration:underline solid 1px; text-underline-offset:2.5px; font-size:22.5px; align-content:center; text-align:center;">Responses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="Index" style="text-decoration:underline solid 1px; text-underline-offset:2.5px; font-size:22.5px; align-content:center; text-align:center;">Comments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index" style="text-decoration:underline solid 1px; text-underline-offset:2.5px; font-size:22.5px; align-content:center; text-align:center;">Posts</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav" style="padding-right:25px;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.facebook.com/falkenbergsrevyn" target="_blank">
                                <span style="display: inline-block; background-color: white; border-radius: 50%; width: 60px; height: 60px; display: flex; justify-content: center; align-items: center;">
                                    <i class="fab fa-facebook" style="font-size: 40px; color: #4267B2;"></i>
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.instagram.com/falkenbergsrevyn" target="_blank">
                                <span style="display: inline-block; background-color: white; border-radius: 50%; width: 60px; height: 60px; display: flex; justify-content: center; align-items: center;">
                                    <i class="fab fa-instagram" style="font-size: 40px; background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888); -webkit-background-clip: text; color: transparent;"></i>
                                </span>
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn logout-btn">Logga ut</button>
                                </form>
                            </li>

                        }
                        else
                        {
                       

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted bg-dark py-3">
        <div class="container text-center">
            &copy; 2024 - FalkenbergsRevyn - <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer> *@

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
