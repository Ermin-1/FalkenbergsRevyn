@model IEnumerable<Comment>

<!-- Full-height dark background wrapper -->
<div class="bg-dark text-light min-vh-100 d-flex flex-column">
    <div class="container mt-5 flex-grow-1 pb-5">
        <h2 class="text-center text-light">Comments</h2>

        <table class="table table-dark table-hover">
            <thead class="thead-dark">
                <tr>
                    
                    <th scope="col">Content</th>
                    <th scope="col">Category</th>
                    <th scope="col">Date</th>
                    
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model)
                {
                    <tr>
                        
                        <td>@comment.Content</td>
                        <td>@comment.Category</td>
                        <td>@Html.DisplayFor(modelItem => comment.DatePosted)</td>
                        
                        <td>
                            <a class="btn btn-sm btn-warning" href="/Comment/Details/@comment.CommentId" title="Details">
                                <i class="fa-solid fa-magnifying-glass-plus"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@comment.CommentId" method="post" style="display:inline-block;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this comment?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer that remains at the bottom of the page -->
    <footer class="text-center py-3">
        <div class="container">
            &copy; 2024 - FalkenbergsRevyn - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
        </div>
    </footer>
</div>
