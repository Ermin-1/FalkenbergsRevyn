@model FalkenbergsRevyn.Models.CommentViewModel

@{
    ViewData["Title"] = "Add a Comment";
}

<h1>Add a Comment</h1>

<form asp-action="Create" asp-controller="UserComment" method="post">
    <input type="hidden" asp-for="PostId" />

    <div class="form-group">
        <label asp-for="Content" class="control-label">Comment</label>
        <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
