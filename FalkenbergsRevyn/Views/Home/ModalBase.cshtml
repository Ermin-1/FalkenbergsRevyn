@model ModalViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1" aria-labelledby="@Model.ModalId + 'Label'" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header text-black border-0">
                <h5 class="modal-title" id="@Model.ModalId + 'Label'">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-black border-0">
                @Model.Body
            </div>
            <div class="modal-footer border-0">
                @foreach (var button in Model.FooterButtons)
                {
                    @Html.Raw(button)
                }
            </div>
        </div>
    </div>
</div>

